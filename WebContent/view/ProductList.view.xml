<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="smax.etag.SPLITAPPP.controller.ProductList" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product List">
		<content>
			<List items="{/ProductSet}" id="idList">
			   <items>
			      <StandardListItem title="{ProductID}" description="{Name}" info="{Category}"
			      type="Active" press="onItemPress"/> 
			   </items>
			</List>
		</content>
		
	</Page>
</core:View>